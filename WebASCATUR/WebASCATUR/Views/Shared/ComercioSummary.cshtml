@using Microsoft.Extensions.Options;
@using WebASCATUR.Configuration;
@using WebASCATUR.Data.Models;

@inject IOptions<ApplicationConfigurations> OptionsApplicationConfiguration

@model Comercio
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@(OptionsApplicationConfiguration.Value.PathImage + Model.ImagenPrimaria)" alt="" />
        <div class="caption">
            @*<h3 class="pull-right">@Model.Precio</h3>*@
            <h3>
                <a asp-controller="Comercio" asp-action="Detalle" asp-route-Id="@Model.Id">@Model.Nombre</a>
            </h3>
            <p style="white-space: nowrap; width: 18em;text-overflow:ellipsis; overflow: hidden;">@Model.Descripcion</p>
            <a class="link" asp-controller="Comercio" asp-action="Detalle" asp-route-Id="@Model.Id">Leer Más</a>
            <br />
        </div>

    </div>
</div>