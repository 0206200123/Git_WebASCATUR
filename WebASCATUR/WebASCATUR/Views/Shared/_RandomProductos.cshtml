@using Microsoft.Extensions.Options;
@using WebASCATUR.Configuration;
@using WebASCATUR.Data.Models;

@inject IOptions<ApplicationConfigurations> OptionsApplicationConfiguration

@model  WebASCATUR.ViewModels.HomeViewModel

@foreach (var producto in Model.aleatorioProductos)
{
    <div class="col-sm-4 sm-margin-b-50">
        <div class="margin-b-20">
            <img class="img-responsive wow fadeInLeft" src="@(OptionsApplicationConfiguration.Value.PathImage + producto.ImagenPrimaria)" alt="Producto" data-wow-duration=".3" data-wow-delay=".2s" data-wow-iteration="2">
        </div>
        <h4><a asp-controller="Producto" asp-action="Detalle" asp-route-Id="@producto.Id">@producto.Nombre</a></h4>
        <p style="white-space: nowrap; width: 18em;text-overflow:ellipsis; overflow: hidden;">@producto.Detalle</p>
        <a class="link" asp-controller="Producto" asp-action="Detalle" asp-route-Id="@producto.Id">Leer Más</a>
       
    </div>

  
}
